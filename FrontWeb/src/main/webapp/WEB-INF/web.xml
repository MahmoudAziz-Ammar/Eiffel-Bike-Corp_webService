<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <!-- Définition du filtre CORS -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>Class.CorsFilter</filter-class> <!-- Votre classe CorsFilter -->
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/front/*</url-pattern> <!-- Applique le filtre CORS à vos routes -->
    </filter-mapping>

    <!-- Définition de la servlet Jersey -->
    <servlet>
        <servlet-name>JerseyServlet</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>Class;Front</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Mappage de la servlet -->
    <servlet-mapping>
        <servlet-name>JerseyServlet</servlet-name>
        <url-pattern>/front/*</url-pattern>
    </servlet-mapping>
</web-app>
